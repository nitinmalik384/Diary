<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item

        android:state_pressed="true">
        <shape
            android:shape="rectangle">

            <solid
                android:color="#f5f4f4"
                />
            <corners
                android:radius="1dp"
                />

            <stroke
                android:color="#f5f4f4"
                android:width="1dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">

            <solid
                android:color="#ffff"
                />
            <corners
                android:radius="1dp"
                />
            <stroke
                android:color="#ffffff"
                android:width="1dp"/>
        </shape>
    </item>




</selector>